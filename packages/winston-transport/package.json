{
  "name": "@opentelemetry/winston-transport",
  "version": "0.14.1",
  "description": "OpenTelemetry Transport for winston",
  "main": "build/src/index.js",
  "types": "build/src/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/open-telemetry/opentelemetry-js-contrib.git",
    "directory": "packages/winston-transport"
  },
  "scripts": {
    "clean": "rimraf build/*",
    "compile": "tsc -p .",
    "compile:with-dependencies": "nx run-many -t compile -p @opentelemetry/winston-transport",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "prepublishOnly": "npm run compile",
    "tdd": "npm run test -- --watch-extensions ts --watch",
    "test": "nyc mocha 'test/**/*.test.ts'",
    "version:update": "node ../../scripts/version-update.js"
  },
  "keywords": [
    "transport",
    "logging",
    "nodejs",
    "opentelemetry",
    "winston"
  ],
  "author": "OpenTelemetry Authors",
  "license": "Apache-2.0",
  "engines": {
    "node": "^18.19.0 || >=20.6.0"
  },
  "files": [
    "build/src/**/*.js",
    "build/src/**/*.js.map",
    "build/src/**/*.d.ts"
  ],
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/mocha": "10.0.10",
    "@types/node": "18.18.14",
    "@types/sinon": "17.0.4",
    "@types/triple-beam": "1.3.5",
    "nyc": "17.1.0",
    "rimraf": "5.0.10",
    "sinon": "15.2.0",
    "typescript": "5.0.4"
  },
  "dependencies": {
    "@opentelemetry/api-logs": "^0.203.0",
    "winston-transport": "4.*"
  },
  "homepage": "https://github.com/open-telemetry/opentelemetry-js-contrib/tree/main/packages/winston-transport#readme"
}
