{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "outDir": "dist/esm",
    "rootDir": "src", // Changed from "src" to "."
    "tsBuildInfoFile": "dist/esm/tsconfig.esm.tsbuildinfo",
    
    /* Core TypeScript Options */
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": false,
    "declaration": true,
    "sourceMap": true,
    "composite": true,
    "incremental": true,
    
    /* Required for path mappings */
    "baseUrl": ".",
    
    /* Paths */
    "paths": {
      "langchainV0.1/*": ["node_modules/langchainV0.1/*"],
      "@langchain/coreV0.1/*": ["node_modules/@langchain/coreV0.1/*"],
      "@langchain/aws": ["node_modules/@langchain/aws"]
    }
  },
  "include": ["src/**/*.ts"],
  // "exclude": ["node_modules", "dist", "sample-apps", "**/*.test.ts"],
  "references": [],
  
  "tsc-alias": {
    "verbose": false,
    "resolveFullPaths": true
  }
}