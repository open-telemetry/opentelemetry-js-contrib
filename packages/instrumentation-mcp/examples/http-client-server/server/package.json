{
  "name": "mcp-http-server-example",
  "version": "1.0.0",
  "description": "Example MCP HTTP server with OpenTelemetry instrumentation",
  "private": true,
  "scripts": {
    "build": "tsc",
    "start": "node ./build/index.js",
    "dev": "tsc && node ./build/index.js",
    "inspect": "npx @modelcontextprotocol/inspector node ./build/stdio-wrapper.js",
    "inspect-http": "npx @modelcontextprotocol/inspector http://localhost:3001/sse"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.19.1",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "file:../../../auto-instrumentations-node",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "typescript": "^5.3.3"
  }
}