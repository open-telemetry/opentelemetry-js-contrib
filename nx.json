{
  "namedInputs": {
    "version": ["{projectRoot}/package.json"],
    "default": [
      "{projectRoot}/**/*", 
      "!{projectRoot}/node_modules/**/*",
      "!{projectRoot}/build/**/*",
      "!{projectRoot}/coverage/**/*",
      "!{projectRoot}/.nyc_output/**/*"
    ],
    "production": ["!{projectRoot}/test/**/*"]
  },
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": [
          "test",
          "compile",
          "lint",
          "version:update"
        ],
        "cacheDirectory": ".nxcache"
      }
    }
  },
  "targetDefaults": {
    "compile": {
      "inputs": ["default", "^production"],
      "dependsOn": [
        "^compile", "version:update"
      ],
      "outputs": [
        "{projectRoot}/build"
      ]
    },
    "test": {
      "inputs": ["default"],
      "dependsOn": [
        "^compile"
      ],
      "outputs": [
        "{projectRoot}/coverage",
        "{projectRoot}/.nyc_output"
      ]
    },
    "version:update": {
      "inputs": ["version"],
      "outputs": [
        "{projectRoot}/src/version.ts"
      ]
    }
  }
}
